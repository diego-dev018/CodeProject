---
interface Props {
    projects: {
        title: string;
        href: string;
        icon: string;
        progress: {
            current: number;
            total: number;
        }
    }[]
}
const { projects } = Astro.props;
---
<ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-8">
    {
        projects.map(project => (
            <a
            href={project.href}
            class="group aspect-square rounded-lg p-4 w-full bg-zinc-700"
            >
                <li class="flex flex-col justify-between h-full">
                    <h4 class="text-3xl font-semibold">
                        {project.title}
                    </h4>
                    <div class="flex font-semibold gap-4 items-end justify-between">
                        <div class="w-full">
                            <div class="flex justify-between px-2">
                                <span>
                                    {project.progress.current}
                                </span>
                                <span>
                                    {project.progress.total}
                                </span>
                            </div>
                            <div class="h-5 bg-gradient-to-r from-slate-500 to-slate-100 rounded-xl" />
                        </div>
                        <p class="font-bold group-hover:text-purple-300 transition duration-300">Iniciar</p>
                    </div>
                </li>
            </a>
        ))
    }
</ul>