---
import Container from "@/components/container.astro"

const header = {
    nav: [
        {
            name: 'Inicio',
            url: '/'
        },
        {
            name: 'Proyectos',
            url: '/project'
        },
    ]
}
---

<Container class="fixed top-0 left-0 z-[999] right-0 w-full bg-zinc-800 bg-opacity-65">
    <header class="grid grid-cols-3 items-center w-full h-16 bg-opacity-60">
        <div>
            <h2 class="text-xl font-bold">
                Code
                <span class="text-3xl">
                    Project
                </span>
            </h2>
            <h3 class="text-sm text-yellow-200 font-semibold">
                Aprende a Programar Programando
            </h3>
        </div>
        <nav class="flex items-center mx-auto font-semibold gap-x-8 text-xl">
            {
                header.nav.map(item => (
                    <a
                    class="px-1 border-b-[1px] border-b-zinc-800 hover:border-b-zinc-500 transition"
                    href={item.url}
                    >
                        {item.name}
                    </a>
                ))
            }
        </nav>
        <div class="flex justify-end items-center gap-x-4">
            <a
            href=""
            class="px-3 pb-1 rounded-xl font-semibold text-md bg-zinc-800 hover:bg-zinc-700 transition-colors duration-500"
            >
                Apoyar
            </a>
            <a
            href=""
            class="px-3 pb-1 rounded-xl font-semibold text-xl bg-zinc-800 hover:bg-zinc-700 transition-colors duration-500">
                Iniciar sesion
            </a>
        </div>
    </header>
</Container>
<div class="pb-16" />